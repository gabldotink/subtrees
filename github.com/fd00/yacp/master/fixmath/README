  /usr/include/fixmath/fixmath_export.h
  /usr/include/fixmath/fixmath_impl.h
  /usr/include/fixmath/fixmath_macro.h
  /usr/include/fixmath/fixmath_ver.h
  /usr/lib/libfixmath.dll.a
