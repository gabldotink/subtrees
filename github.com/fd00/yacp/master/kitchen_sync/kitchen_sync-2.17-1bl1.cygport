BUILD_REQUIRES="libmariadb-devel libpq-devel libxxhash-devel libyaml-cpp-devel"

export CPPFLAGS="${CPPFLAGS} -D_GNU_SOURCE"
export CXXFLAGS="${CXXFLAGS} -fpermissive"

inherit cmake

src_test()
{
	cd ${B}
	ninja_test
}

DOCS="
	*.md
"
