  /usr/include/libthreadar/exceptions.hpp
  /usr/include/libthreadar/fast_tampon.hpp
  /usr/include/libthreadar/freezer.hpp
  /usr/include/libthreadar/libthreadar.hpp
  /usr/include/libthreadar/libthreadar_config.h
  /usr/include/libthreadar/mutex.hpp
  /usr/include/libthreadar/ratelier_gather.hpp
  /usr/include/libthreadar/ratelier_scatter.hpp
  /usr/include/libthreadar/semaphore.hpp
  /usr/include/libthreadar/tampon.hpp
  /usr/include/libthreadar/thread.hpp
  /usr/lib/libthreadar.dll.a
  /usr/lib/pkgconfig/libthreadar.pc

