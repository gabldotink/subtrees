HOMEPAGE="https://github.com/libyal/${PN}"
SRC_URI="https://github.com/libyal/${PN}/archive/refs/tags/${PV}.tar.gz"

CATEGORY="Libs"
SUMMARY="Library and tools to access the Windows 9x/Me Registry File (CREG) format"
DESCRIPTION="libcreg is a library to access the Windows 9x/Me Registry File (CREG) format."

LICENSE="LGPL-3.0-or-later"
LICENSE_SPDX="SPDX-License-Identifier: LGPL-3.0-or-later"
LICENSE_URI="COPYING"

BUILD_REQUIRES="libbfio-devel libcdata-devel libcerror-devel libclocale-devel libcnotify-devel libcthreads-devel libfcache-devel libfdata-devel libuna-devel"

CYGCONF_ARGS="
	--enable-python3
"

src_test()
{
	cd ${B}
	pushd tests
		for f in ${S}/tests/*.{py,sh}
		do
			ln -fs ${f} .
		done
	popd
	cygtest
	rm tests/*.{py,sh}
}

DOCS="
	COPYING.LESSER
"

PKG_NAMES="
	${PN}
	${PN}1
	${PN}-devel
	python39-${PN}
"
libcreg_CONTENTS="
	usr/bin/*.exe
	usr/share/doc
	usr/share/man/man1
"
libcreg1_CONTENTS="
	usr/bin/*.dll
"
libcreg_devel_CONTENTS="
	usr/include
	usr/lib/lib*.dll.a
	usr/lib/pkgconfig
	usr/share/man/man3
"
python39_libcreg_CONTENTS="
	usr/lib/python3*
"
libcreg_SUMMARY="${SUMMARY} (utilities)"
libcreg1_SUMMARY="${SUMMARY} (runtime)"
libcreg_devel_SUMMARY="${SUMMARY} (development)"
python39_libcreg_SUMMARY="${SUMMARY} (python39 bindings)"
