HOMEPAGE="http://www.pleyades.net/david/projects/${PN}"
SRC_URI="https://launchpad.net/${PN}/trunk/${PV}/+download/${P}.tar.bz2"

CATEGORY="Libs"
SUMMARY="Generic hash library implemented in C"
