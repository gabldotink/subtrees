  /usr/share/doc/sz81/NEWS
  /usr/share/doc/sz81/README
  /usr/share/sz81/sz81.bmp
  /usr/share/sz81/sz81icons.bmp
  /usr/share/sz81/zx80.rom
  /usr/share/sz81/zx80font.bmp
  /usr/share/sz81/zx80kybd.bmp
  /usr/share/sz81/zx81.rom
  /usr/share/sz81/zx81font.bmp
  /usr/share/sz81/zx81kybd.bmp
  /usr/share/sz81/zx82font.bmp

