HOMEPAGE="https://github.com/andikleen/${PN}"
SRC_URI="https://github.com/andikleen/${PN}/archive/v${PV}.tar.gz"

CATEGORY="Utils"
SUMMARY="C decompress tool for mozilla lz4json format"
DESCRIPTION="A little utility to unpack lz4json files as generated by Firefox's bookmark
backups and session restore."

src_compile()
{
	cd ${B}
	lndirs
	cygmake
}

src_install()
{
	cd ${B}
	dobin *.exe
	doman *.1
}
