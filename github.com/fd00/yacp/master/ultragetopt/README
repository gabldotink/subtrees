  /usr/share/doc/ultragetopt/THANKS
  /usr/share/doc/ultragetopt/TODO

(libultragetopt0)
  /usr/bin/cygultragetopt-0.dll

(libultragetopt-devel)
  /usr/include/ultragetopt.h
  /usr/lib/libultragetopt.dll.a
  /usr/lib/pkgconfig/ultragetopt.pc

