  /usr/share/doc/hkl/ChangeLog
  /usr/share/doc/hkl/NEWS
  /usr/share/doc/hkl/README
  /usr/share/hkl/ghkl.ui
  /usr/share/hkl/pseudo.ui
  /usr/share/man/man1/ghkl.1.gz

(libhkl5)
  /usr/bin/cyghkl-5.dll

(libhkl-devel)
  /usr/include/hkl-5/hkl-binoculars.h
  /usr/include/hkl-5/hkl.h
  /usr/include/hkl-5/hkl/ccan/ccan_config.h
  /usr/include/hkl-5/hkl/ccan/darray/darray.h
  /usr/lib/libhkl-binoculars.a
  /usr/lib/libhkl.dll.a
  /usr/lib/pkgconfig/hkl-binoculars.pc
  /usr/lib/pkgconfig/hkl.pc

(girepository-Hkl5.0)
  /usr/lib/girepository-1.0/Hkl-5.0.typelib
  /usr/share/gir-1.0/Hkl-5.0.gir

